extends ../common/layout

block content
    h1 Add A User
    form(action="/admin/users", method="post", enctype="multipart/form-data") 
        .row
            .col-md-6
                h3 Login Info
                .mb-3
                    label(for="username") Username
                    input#username.form-control(type="text", name="username")
                .mb-3
                    label(for="password") Password
                    input#password.form-control(type="text", name="password")
                .mb-3
                    label(for="image") Image
                    input#image.form-control(type="file", name="image")
            .col-md-6
                h3 User Info
                .mb-3
                    label(for="name") Name
                    input#name.form-control(type="text", name="name")
                .mb-3
                    label(for="email") Email
                    input#email.form-control(type="email", name="email")
                .mb-3
                    label(for="mobile") Mobile
                    input#mobile.form-control(type="text", name="mobile")
        input.btn.btn-success(type="submit", value="Submit Now")